<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Meditasyon"
    android:background="@drawable/gradi">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


        <TextView
            android:id="@+id/tv_pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal"
            android:text="0%" />

        <ProgressBar
            android:id="@+id/pb_circle"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:progress="80"
            android:progressDrawable="@drawable/medi"
            android:scrollbarStyle="insideOverlay" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_countDownTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:textSize="30dp"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <RadioGroup
        android:id="@+id/rg_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp" >

        <RadioButton
            android:id="@+id/rb_10min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:onClick="checkButton"
            android:text="10 dakika"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/rb_20min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="20 dakika"
            android:onClick="checkButton"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rb_30min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="30 dakika"
            android:onClick="checkButton" />

        <RadioButton
            android:id="@+id/rb_free"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Kendi Sürem"
            android:onClick="checkButton" />

    </RadioGroup>

    <Button
        android:id="@+id/btn_startStop"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/black"
        android:text="BAŞLA"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

</LinearLayout>